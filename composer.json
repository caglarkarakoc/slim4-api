{
  "name": "caglarkarakoc/slim4-api",
  "description": "Slim Framework 4 api example",
  "keywords": [
    "rest",
    "api"
  ],
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Çağlar Karakoç",
      "email": "info@caglarkarakoc.com",
      "homepage": "http://www.caglarkarakoc.com"
    }
  ],
  "require": {
    "php": "^7.3",
    "slim/slim": "^4.5",
    "slim/psr7": "^1.1",
    "illuminate/database": "^6.3",
    "php-di/php-di": "^6.0",
    "vlucas/phpdotenv": "^3.6",
    "monolog/monolog": "^2.0",
    "robmorgan/phinx": "^0.11.1",
    "hassankhan/config": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    },
    "files": [
      "app/Helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.4"
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit --configuration phpunit.xml",
    "migrate": "phinx migrate",
    "seed": "phinx seed:run",
    "post-install-cmd": [
      "@copy-env"
    ],
    "copy-env": "@php -r \"file_exists('.env') ?: copy('.env.dist', '.env');\""
  }
}
